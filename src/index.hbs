{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}
{{!-- The main content area --}}
<script>
  let clientWidth;
  let root = document.documentElement;
  var Tags;

  var url_slug = window.location.pathname.split('/')[2];
  var url_parent = window.location.protocol + "//" + window.location.host + "/blog/";
  window.addEventListener("load", () => {
    clientWidth = document.getElementById('size-ref').clientWidth;
    root.style.setProperty('--size-ref-x', clientWidth + "px");
   // $(url_slug).addClass('active-tag').attr('href', url_parent);

      Tags = document.getElementsByClassName(url_slug);
      for (var i = 0; i < Tags.length; ++i) {
          Tags[i].classList.add('active-tag');
          Tags[i].href = url_parent;
      }

    console.log(url_slug);
    console.log(url_parent);
  });
</script>
<main id="site-main">
    <div class="mr-[1.8rem] blog-bottom-margin">
      <div class="font-sans border-black border-t md:border-t-2">
        <div class="grid grid-cols-1 grid-flow-row-dense gap-0">
          {{!-- Iterate through each posts --}}
          {{#foreach posts}}
            <article class="{{post_class}} border-b md:border-b-2 border-black">
              <div class="card-body mb-1.5 pl-2 mt-[-1px] md:mt-[-2px]" id="blog-post-{{@index}}">
                <div class="card-info flex flex-row justify-between mb-0.5">
                  <time class="flex flex-col justify-end text-[0.725rem] leading-none font-sans" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD.MM.YYYY"}}</time>
                  {{#if tags}}
                    <ul class="flex flex-grow-1 justify-end">
                      {{#foreach tags}}
                          {{#unless @first}}
                        <li class="m-0 flex flex-col justify-start">
                          <a href="{{url}}" title="{{name}}" data-aos="fade-right" class="tag tag-{{id}} {{slug}}">{{name}}</a>
                        </li>
                          {{/unless}}
                      {{/foreach}}
                    </ul>
                  {{/if}}
                </div>
                <a href="{{url}}" id="hiding-parent">
                  <h1 class="flex font-bold uppercase text-3xl leading-7" data-aos="fade-right" data-aos-duration="500">{{title}}</h1>
                  {{#if feature_image}}
                  {{!-- This is a responsive image, it loads different sizes depending on device
                  https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
                    <img class="blog-image hidden-img {{#if @even}}even{{else}}odd{{/if}} absolute object-fit w-auto max-h-32 overflow-hidden"
                         srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
                         sizes="100vw"
                         src="{{img_url feature_image size="m"}}"
                         alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                         loading="lazy"
                    />
                  {{/if}}
                  <p class="font-serif lg:mr-16 mr-2 leading-5" id="excerpt">
                    {{excerpt characters="150"}}
                  </p>
                </a>

              </div>{{!--/.post-card-content--}}


            </article>
          {{/foreach}}
        </div>
      </div>
    </div>
</main>
